- name: creating user
  hosts: localhost
  tasks:
  - name: check the user is aleady exist or not
    ansible.builtin.command: id kumara
    register: output
    ignore_errors: true

  - name: print the output
    ansible.builtin.debug:
      msg: "output is {{output}}"
  
  - name: print exit status
    ansible.builtin.debug:
      msg: "{{output.rc}}"

  - name: creating user
    ansible.builtin.user:
      name: kumara
    when: output.rc != 0