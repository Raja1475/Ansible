- name: Creating user
  hosts: localhost
  tasks:
  - name: to check the user is exist or not
    ansible.builtin.command: id raja
    register: output
    ignore_errors: true
  
  - name: check the output status
    ansible.builtin.debug:
     msg: output is {{output}}
  
  - name: check the output status
    ansible.builtin.debug:
      msg: "{{output.rc}}"

  
  - name: creating user
    ansible.builtin.user:
      become: yes
      name: raja
    when: output.rc != 1
